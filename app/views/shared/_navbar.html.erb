<header class="bg-white">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <%= link_to root_path, class:"-m-1.5 p-1.5" do %>
      <span class="sr-only">Icarus</span>
      <img class="h-8 w-auto" src="https://i.imgur.com/N2EVCJE.png" alt="">
    <% end %>
    <div class="lg:flex lg:gap-x-12">
      <% if user_signed_in? %>
        <%= link_to "History", surveys_path, class: "text-sm font-semibold leading-6 text-black" %>
        <%= link_to "Sign out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-sm font-semibold leading-6 text-black ml:4 md: ml-2" %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: "text-sm font-semibold leading-6 text-black" %>
        <%= link_to "Sign up", new_user_registration_path, class: "text-sm font-semibold leading-6 text-black ml-4 md: ml-2" %>
      <% end %>
    </div>
  </nav>
</header>
