<header class="bg-white">
  <nav class="mx-auto flex max-w-7xl items-center justify-between p-6 lg:px-8" aria-label="Global">
    <%= link_to root_path, class:"-m-1.5 p-1.5" do %>
      <span class="sr-only">Icarus</span>
      <img class="h-8 w-auto" src="https://i.imgur.com/N2EVCJE.png" alt="">
    <% end %>
    <div class="flex lg:hidden">
      <button type="button" class="-m-2.5 inline-flex items-center justify-center rounded-md p-2.5 text-gray-700">
        <span class="sr-only">Open main menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
        </svg>
      </button>
    </div>
    <div class="hidden lg:flex lg:gap-x-12">
      <% if user_signed_in? %>
        <%= link_to "History", root_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
        <%= link_to "Sign out", destroy_user_session_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
      <% else %>
        <%= link_to "Sign in", new_user_session_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
        <%= link_to "Sign up", new_user_registration_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
      <% end %>
    </div>
  </nav>
</header>
